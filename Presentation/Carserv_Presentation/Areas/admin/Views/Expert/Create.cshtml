
@model ExpertSliderVM
<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="FullName">FullName</label>
            <input asp-for="FullName" placeholder="Enter FullName">
            <span asp-validation-for="FullName" style="color:red"></span>
        </div>
        <div class="form-group">
            <label asp-for="Designation">FullName</label>
            <input asp-for="Designation" placeholder="Enter Designation">
            <span asp-validation-for="Designation" style="color:red"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImgFIle">FullName</label>
            <input asp-for="ImgFIle" placeholder="Enter ImgFIle">
            <span asp-validation-for="ImgFIle" style="color:red"></span>
        </div>
       
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>