@{
    int count = 0;
}
@model List<ExpertSlider>
<div>
    <h4>Experts</h4>
    <a class="btn btn-primary" asp-action="Create">Create Expert</a>
</div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">Desgination</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count += 1;
                <tr>
                    <th scope="row">@count</th>
                    <td>@item.FullName</td>     
                    <td>@item.Desgination</td>
                    <td><img src="~/admin/upload/experts/@item.ImgURl" width="100px" /></td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.ID">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>

                    </td>
                </tr>     
            }
        </tbody>
    </table>
</div>  